{
  "name": "hive-object-converter",
  "displayName": "Hive Object Converter",
  "description": "Convert your class models into hive objects easily",
  "publisher": "mrgnhnt96",
  "icon": "images/hive_object_converter.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrgnhnt96/Hive_Object_Converter"
  },
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hive-object-converter.convert_to_hive",
    "onCommand:hive-object-converter.get_generated_files",
    "onCommand:hive-object-converter.convert_to_hive_models"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hive-object-converter.convert_to_hive_models",
        "title": "[Hive] Convert *.model.dart in folder to Hive"
      },
      {
        "command": "hive-object-converter.convert_to_hive",
        "title": "[Hive] Convert To Hive"
      },
      {
        "command": "hive-object-converter.get_generated_files",
        "title": "[Hive] Get Hive Generated Files"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "hive-object-converter.convert_to_hive_models",
          "group": "aconvert_to_hive@1",
          "when": "explorerResourceIsFolder",
          "alt": "alt+z"
        },
        {
          "command": "hive-object-converter.convert_to_hive",
          "group": "aconvert_to_hive@1",
          "when": "resourceLangId == dart",
          "alt": "alt+z"
        },
        {
          "command": "hive-object-converter.get_generated_files",
          "group": "aconvert_to_hive@1",
          "when": "resourceLangId == dart",
          "alt": "alt+z"
        }
      ]
    },
    "configuration": [
      {
        "title": "Hive object convert Generator configuration",
        "properties": {
          "hive-object-converter.use_HiveObject": {
            "type": "boolean",
            "enum": [
              true,
              false
            ],
            "default": true,
            "description": "If true, will extends with the hive object on all generated classes"
          },
          "hive-object-converter.folder_of_created_files": {
            "type": "string",
            "default": "hive_helper",
            "description": "The folder, where to put all the generated files. The root folder is lib. There for it will be /lib/hive_helper/"
          },
          "hive-object-converter.should_use_model_dots": {
            "type": "boolean",
            "enum": [
              true,
              false
            ],
            "default": true,
            "description": "If true, will only look for extended file names like '.model."
          },
          "hive-object-converter.should_use_model_dots_name": {
            "type": "string",
            "default": ".model.",
            "description": "If should_use_model_dots is set to `true`, then `.model.` will only be used to convert to hive "
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.157",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.19",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.9.6",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.1",
    "change-case": "^4.1.1",
    "child_process": "^1.0.2",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.17",
    "mkdir": "0.0.2",
    "path": "^0.12.7"
  }
}
